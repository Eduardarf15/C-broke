#include<iostream>
#include<cstdlib>

using namespace std;

int main()
{
    int n1, n2, res;
    char opc;

    do {
        cout << "Digite valor 1: ";
        cin >> n1;
        cout << "Digite valor 2: ";
        cin >> n2;

        res = n1 + n2;

        if(res >= 60){
            cout << "Aprovado" << endl;
        }
        else if(res >= 40){
            cout << "Quase lÃ¡" << endl;
        }
        else{
            cout << "Reprovado" << endl;
        }

        cout << "Quer adicionar outras notas? [s/n]: ";
        cin >> opc;

    } while(opc == 's' || opc == 'S');

    return 0;
}
